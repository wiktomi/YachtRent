@model IEnumerable<YachtRent.Models.Yachts>

@{
    ViewBag.Title = "Index";
}

<h2>Lista jachtów</h2>

<p>
    @Html.ActionLink("Dodaj nowy", "Create", new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.YachtName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Capacity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cabins)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Beds)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Showers)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductionDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Length)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.YachtName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Capacity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cabins)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Beds)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Showers)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductionDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Length)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>        
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.YachtID }, new { @class = "btn btn-primary" }) 
            @Html.ActionLink("Szczegóły", "Details", new { id=item.YachtID }, new { @class = "btn btn-info" })
            @Html.ActionLink("Usuń", "Delete", new { id=item.YachtID }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
