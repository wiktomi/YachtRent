@model IEnumerable<YachtRent.Models.Rent>

@{
    ViewBag.Title = "GetRentedYachts";
}

<h2>Wypożyczone jachty</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.YachtName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fee)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.YachtName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fee)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td> 
        <td>
            @Html.ActionLink("Edycja", "Edit", new { id = item.Id}, new { @class = "btn btn-primary" }) |           
            @Html.ActionLink("Usuń", "Delete", new { id = item.Id}, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
